<%= render 'errors_ajax', modal_form: 'update' %>

<% if @user.errors.any? %>
  errorsSection.innerHTML = "<%= j render 'shared/errors', user: @user %>"
<% else %>
  document.getElementById('user_<%= @user.id %>').innerHTML = "<%= j render 'card', user: @user %>"
  document.querySelector('.close-edit').click()
  // rerender tooltip
  <%= render 'tooltis_ajax' %>
<% end %>
