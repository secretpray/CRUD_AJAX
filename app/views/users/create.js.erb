<%= render 'errors_ajax', modal_form: 'create' %>

<% if @user.errors.any? %>
  errorsSection.innerHTML = "<%= j render 'shared/errors', user: @user %>"
<% else %>
  document.getElementById('table-body').insertAdjacentHTML('afterbegin', "<%= j render 'table_row', user: @user, index: @index %>")
  document.querySelector('.pagination-link').innerHTML = "<%== j render partial: 'pagy/bootstrap_nav', locals: {pagy: @pagy} %>"
  document.querySelector('.close-create').click()
<% end %>
