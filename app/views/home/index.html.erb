<div class="mainpage">
  <!-- Jumbotron -->
  <section id="s1" name="page1">
    <header class="masthead min-vh-100">
      <div class="container">
        <div class="masthead-subheading">Welcome To Our Project!</div>
        <div class="masthead-heading text-uppercase">It's Nice To Meet You</div>
        <%= link_to 'Tell Me More', users_path, class: 'btn btn-primary btn-xl text-uppercase', style: 'background-color: #FFC800; padding: 15px 30px;' %>
      </div>
    </header>
  </section>
  <!-- Carousel -->
  <section id="s2" name="page2">
    <div class="container-fluid p-0 m-0 min-vh-100">
      <div id="carouselIndicators" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
          <button type="button" data-bs-target="#carouselIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
        </div>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src=<%= image_url('1.jpg') %> class="d-block w-100" alt="first image" style='filter: brightness(0.4); opacity: 0.95;'>
            <div class="carousel-caption d-none d-md-block mb-5">
              <div class="masthead-heading text-uppercase">AJAX technology</div>
              <div class="masthead-subheading">AJAX technology allows you to speed up the process of loading resources.</div>
            </div>
          </div>
          <div class="carousel-item">
            <img src=<%= image_url('2.jpg') %> class="d-block w-100" alt="second image" style='filter: brightness(0.4); opacity: 0.95;'>
            <div class="carousel-caption d-none d-md-block mb-5">
              <div class="masthead-heading text-uppercase">Infinite scrolling</div>
              <div class="masthead-subheading">After a pause, a new page can be automatically added.</div>
            </div>
          </div>
          <div class="carousel-item">
            <img src=<%= image_url('3.jpg') %> class="d-block w-100" alt="third image" style='filter: brightness(0.4); opacity: 0.95;'>
            <div class="carousel-caption d-none d-md-block mb-5">
              <div class="masthead-heading text-uppercase">Live search</div>
              <div class="masthead-subheading">Found entries are immediately displayed on the page without reloading it.</div>
            </div>
          </div>
          <div class="carousel-item">
            <img src=<%= image_url('header-bg.jpg') %> class="d-block w-100" alt="third image" style='filter: brightness(1.3);'>
            <div class="carousel-caption d-none d-md-block mb-5">
              <div class="masthead-heading text-uppercase">User data preview</div>
              <div class="masthead-subheading">Hovering over a pin displays additional information in the tooltip window.</div>
            </div>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselIndicators" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselIndicators" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
  </section>
  <!-- accordion section -->
  <section id="s3" name="page3">
    <div class="section-accordion">
      <div class="wrapper w-100 h-100">
        <div class="image__wrapper">
          <div class="image__wrapper_inner">
            <img src=<%= image_url('Questions.svg') %> alt="Question FAQ">
          </div>
          <img class="box" src=<%= image_url('illustration-box-desktop.svg') %> alt="illustration FAQ">
        </div>
        <div class="accordion__wrapper">
          <h1 class="title__accordion">FAQ</h1>
          <div class="questions__accordions">
            <!-- Faq block start -->
            <div class="question-answer__accordion">
              <div class="question">
                <h3 class="title__question">
                    How many team members can I invite?
                </h3>
                <img src=<%= image_url('icon-arrow-down.svg')%> class='arrow-down'>
              </div>
              <div class="answer">
                  You can invite up to 2 additional users on the Free plan. There is no limit on
                  team members for the Premium plan.
              </div>
            </div>
            <!-- Faq block start -->
            <div class="question-answer__accordion">
              <div class="question">
                <h3 class="title__question">
                    What is the maximum file upload size?
                </h3>
                <img src=<%= image_url('icon-arrow-down.svg') %> class='arrow-down'>
              </div>
              <div class="answer">
                  No more than 2GB. All files in your account must fit your allotted storage space.
              </div>
            </div>
            <!-- Faq block start -->
            <div class="question-answer__accordion">
              <div class="question">
                <h3 class="title__question">
                    How do I reset my password?
                </h3>
                <img src=<%= image_url('icon-arrow-down.svg') %> class='arrow-down' >
              </div>
              <div class="answer">
                  Click “Forgot password” from the login page or “Change password” from your profile page.
                  A reset link will be emailed to you.
              </div>
            </div>
            <!-- Faq block start -->
            <div class="question-answer__accordion">
              <div class="question">
                <h3 class="title__question">
                    Can I cancel my subscription?
                </h3>
                <img src=<%= image_url('icon-arrow-down.svg') %> class='arrow-down'>
              </div>
              <div class="answer">
                  Yes! Send us a message and we’ll process your request no questions asked.
              </div>
            </div>
            <!-- Faq block start -->
            <div class="question-answer__accordion">
              <div class="question">
                <h3 class="title__question">
                    Do you provide additional support?
                </h3>
                <img src=<%= image_url('icon-arrow-down.svg') %> class='arrow-down'>
              </div>
              <div class="answer">
                  Chat and email support is available 24/7. Phone lines are open during normal business hours.
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Footer and sibscribe -->
  <section id="s4" name="page4">
